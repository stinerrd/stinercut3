<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th style="width: 120px;">Preview</th>
                <th>Name</th>
                <th style="width: 120px;">Actions</th>
            </tr>
        </thead>
        <tbody id="ss-images-body">
            {% for ss in items %}
            <tr data-id="{{ ss.id }}" data-category="image">
                <td>
                    <div class="ss-preview" data-id="{{ ss.id }}"
                         style="width: 100px; height: 60px; border: 1px solid #dee2e6; border-radius: 4px; overflow: hidden; cursor: pointer;">
                    </div>
                </td>
                <td class="ss-name">{{ ss.name }}</td>
                <td>
                    <button type="button" class="btn btn-sm btn-outline-primary ss-edit-btn me-1" title="Edit">
                        <i class="bi bi-pencil"></i>
                    </button>
                    <button type="button" class="btn btn-sm btn-danger ss-delete-btn" title="Delete">
                        <i class="bi bi-trash"></i>
                    </button>
                </td>
            </tr>
            {% else %}
            <tr class="ss-empty-row">
                <td colspan="3" class="text-center text-muted">No images yet. Import an SVG to get started.</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
