<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Stinercut{% endblock %}</title>

    {# Favicons #}
    <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('images/favicon/apple-touch-icon.png') }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('images/favicon/favicon-32x32.png') }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('images/favicon/favicon-16x16.png') }}">
    <link rel="icon" type="image/x-icon" href="{{ asset('images/favicon/favicon.ico') }}">
    <link rel="manifest" href="{{ asset('images/favicon/site.webmanifest') }}">

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('adminlte/css/adminlte.css') }}">
    {% endblock %}
</head>
<body class="layout-fixed sidebar-expand-lg bg-body-tertiary">
    <div class="app-wrapper">
        {# Header/Navbar #}
        {% include 'components/_navbar.html.twig' %}

        {# Main Sidebar #}
        {% include 'components/_sidebar.html.twig' %}

        {# App Main #}
        <main class="app-main">
            {# Content Header #}
            <div class="app-content-header">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-6">
                            <h3 class="mb-0">{% block page_title %}Dashboard{% endblock %}</h3>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-end">
                                {% block breadcrumbs %}
                                <li class="breadcrumb-item"><a href="/">Home</a></li>
                                <li class="breadcrumb-item active">{% block breadcrumb_active %}Dashboard{% endblock %}</li>
                                {% endblock %}
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

            {# Main content #}
            <div class="app-content">
                <div class="container-fluid">
                    {% block content %}{% endblock %}
                </div>
            </div>
        </main>

        {# Footer #}
        {% include 'components/_footer.html.twig' %}
    </div>

    {# AdminLTE scripts #}
    <script src="{{ asset('adminlte/js/adminlte.js') }}"></script>

    {# Global JavaScript variables (injected by AppController) #}
    <script>
        window.App = window.App || {};
        {% if js_vars_global is defined %}
            {% for key, value in js_vars_global %}
        window.App.{{ key }} = {{ value|raw }};
            {% endfor %}
        {% endif %}
    </script>

    {# Global WebSocket client (loaded before page-specific JS) #}
    <script src="{{ asset('js/websocket-client.js') }}"></script>

    {# Page-specific JavaScript files #}
    {% block javascripts %}
        {% if page_javascripts is defined %}
            {% for js_file in page_javascripts %}
            <script src="{{ asset(js_file) }}"></script>
            {% endfor %}
        {% endif %}
    {% endblock %}
</body>
</html>
