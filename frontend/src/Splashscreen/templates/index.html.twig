{% extends 'base.html.twig' %}

{% block title %}Splashscreens - Stinercut{% endblock %}

{% block page_title %}Splashscreens{% endblock %}
{% block breadcrumb_active %}Splashscreens{% endblock %}

{% block content %}
<div class="row">
    <div class="col-12">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="bi bi-display me-2"></i>Splashscreens
                </h3>
            </div>
            <div class="card-body">
                {# Import Buttons #}
                <div class="mb-3">
                    <button type="button" id="ss-import-btn" class="btn btn-primary me-2">
                        <i class="bi bi-upload me-2"></i>Import SVG
                    </button>
                    <button type="button" id="ss-import-ttf-btn" class="btn btn-secondary">
                        <i class="bi bi-fonts me-2"></i>Import TTF Font
                    </button>
                </div>

                {# Category Tabs - fonts tab lazy loaded #}
                <ul class="nav nav-tabs" id="splashscreenTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active" id="tab-images" data-bs-toggle="tab"
                           href="#content-images" role="tab"
                           aria-controls="content-images" aria-selected="true">
                            Images ({{ images|length }})
                        </a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" id="tab-fonts" data-bs-toggle="tab"
                           href="#content-fonts" role="tab"
                           aria-controls="content-fonts" aria-selected="false"
                           data-tab-api-url="/api/splashscreens/tab/fonts"
                           data-tab-content-id="fonts-content">
                            Fonts
                        </a>
                    </li>
                </ul>

                {# Tab Content #}
                <div class="tab-content pt-3" id="splashscreenTabContent">
                    {# Images Tab - eager loaded #}
                    <div class="tab-pane fade show active" id="content-images" role="tabpanel" aria-labelledby="tab-images">
                        {% include '@Splashscreen/_tab_images.html.twig' with {'items': images} %}
                    </div>

                    {# Fonts Tab - lazy loaded #}
                    <div class="tab-pane fade" id="content-fonts" role="tabpanel" aria-labelledby="tab-fonts">
                        <div id="fonts-content">
                            {# Content loaded via AJAX #}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{# Hidden file input for SVG import #}
<input type="file" id="svg-upload" style="display: none;" accept=".svg,image/svg+xml" />

{# Hidden file input for TTF import #}
<input type="file" id="ttf-upload" style="display: none;" accept=".ttf,.otf" />

{# Edit Modal #}
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Edit Splashscreen</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="editNameInput" class="form-label">Name</label>
                    <input type="text" class="form-control" id="editNameInput" />
                </div>
                <div class="mb-3">
                    <label for="editSvgContent" class="form-label">SVG Content</label>
                    <textarea class="form-control font-monospace" id="editSvgContent" rows="15" style="font-size: 12px;"></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label">Preview</label>
                    <div id="editPreview" style="border: 1px solid #dee2e6; border-radius: 4px; padding: 10px; min-height: 200px; background: #f8f9fa;">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="editModalSaveBtn">Save</button>
            </div>
        </div>
    </div>
</div>

{# Confirm Dialog Modal #}
<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalLabel">Confirm</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="confirmModalBody">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmModalBtn">Delete</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}
