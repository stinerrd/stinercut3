{% extends 'base.html.twig' %}

{% block title %}Projects - Tandem Video Editor{% endblock %}

{% block page_title %}Projects{% endblock %}
{% block breadcrumb_active %}Projects{% endblock %}

{% block content %}
<div class="row">
    <div class="col-12">
        {# Collapsible Filter Card #}
        <div class="card card-outline card-secondary mb-3">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="bi bi-funnel me-2"></i>Filters
                </h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-lte-toggle="card-collapse">
                        <i data-lte-icon="expand" class="bi bi-plus-lg"></i>
                        <i data-lte-icon="collapse" class="bi bi-dash-lg"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <form id="project-filter-form">
                    <div class="row">
                        <div class="col-md-2">
                            <div class="mb-3">
                                <label for="filter-date" class="form-label">Date</label>
                                <input type="date" class="form-control" id="filter-date" name="date" value="{{ 'now'|date('Y-m-d') }}">
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="mb-3">
                                <label for="filter-client" class="form-label">Client</label>
                                <select class="form-select" id="filter-client" name="client_id">
                                    <option value="">All</option>
                                    {% for c in clients %}
                                        <option value="{{ c.id }}">{{ c.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="mb-3">
                                <label for="filter-type" class="form-label">Type</label>
                                <select class="form-select" id="filter-type" name="type">
                                    <option value="">All</option>
                                    {% for typeValue, typeLabel in typeLabels %}
                                        <option value="{{ typeValue }}">{{ typeLabel }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="mb-3">
                                <label for="filter-status" class="form-label">Status</label>
                                <select class="form-select" id="filter-status" name="status">
                                    <option value="">All</option>
                                    {% for status in statuses %}
                                        <option value="{{ status }}">{{ status|capitalize }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="mb-3">
                                <label for="filter-videographer" class="form-label">Videographer</label>
                                <select class="form-select" id="filter-videographer" name="videographer_id">
                                    <option value="">All</option>
                                    {% for v in videographers %}
                                        <option value="{{ v.id }}">{{ v.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="mb-3">
                                <label for="filter-video" class="form-label">Video</label>
                                <select class="form-select" id="filter-video" name="video">
                                    <option value="">All</option>
                                    {% for option in mediaOptions %}
                                        <option value="{{ option }}">{{ option|capitalize }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <div class="mb-3">
                                <label for="filter-photo" class="form-label">Photo</label>
                                <select class="form-select" id="filter-photo" name="photo">
                                    <option value="">All</option>
                                    {% for option in mediaOptions %}
                                        <option value="{{ option }}">{{ option|capitalize }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="col-md-2 offset-md-8">
                            <div class="mb-3">
                                <label class="form-label">&nbsp;</label>
                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-primary flex-fill">
                                        <i class="bi bi-search me-1"></i>Apply
                                    </button>
                                    <button type="button" id="filter-reset-btn" class="btn btn-outline-secondary">
                                        <i class="bi bi-arrow-counterclockwise"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        {# Main Projects Card #}
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="bi bi-list-task me-2"></i>Projects
                </h3>
                <div class="card-tools">
                    <button type="button" id="project-add-btn" class="btn btn-sm btn-primary">
                        <i class="bi bi-plus-circle me-1"></i>Add Project
                    </button>
                </div>
            </div>
            <div class="card-body">
                {% include '@Project/_table.html.twig' with {
                    projects: projects,
                    pagination: pagination
                } %}
            </div>
        </div>
    </div>
</div>

{# Create/Edit Modal #}
<div class="modal fade" id="projectModal" tabindex="-1" aria-labelledby="projectModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="projectModalLabel">Add Project</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="project-form">
                    <input type="hidden" id="project-id" name="id">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="project-client" class="form-label">Client <span class="text-danger">*</span></label>
                                <select class="form-select" id="project-client" name="client_id" required>
                                    <option value="">-- Select Client --</option>
                                    {% for c in clients %}
                                        <option value="{{ c.id }}">{{ c.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="project-type" class="form-label">Type <span class="text-danger">*</span></label>
                                <select class="form-select" id="project-type" name="type" required>
                                    {% for typeValue, typeLabel in typeLabels %}
                                        <option value="{{ typeValue }}">{{ typeLabel }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="project-videographer" class="form-label">Videographer</label>
                                <select class="form-select" id="project-videographer" name="videographer_id">
                                    <option value="">-- None --</option>
                                    {% for v in videographers %}
                                        <option value="{{ v.id }}">{{ v.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="project-desired-date" class="form-label">Desired Date</label>
                                <input type="date" class="form-control" id="project-desired-date" name="desired_date" value="{{ 'now'|date('Y-m-d') }}">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="project-video" class="form-label">Video</label>
                                <select class="form-select" id="project-video" name="video">
                                    {% for option in mediaOptions %}
                                        <option value="{{ option }}" {% if option == 'maybe' %}selected{% endif %}>{{ option|capitalize }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="project-photo" class="form-label">Photo</label>
                                <select class="form-select" id="project-photo" name="photo">
                                    {% for option in mediaOptions %}
                                        <option value="{{ option }}" {% if option == 'maybe' %}selected{% endif %}>{{ option|capitalize }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="project-save-btn">Save</button>
            </div>
        </div>
    </div>
</div>

{# Delete Confirmation Modal #}
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this project?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="delete-confirm-btn">Delete</button>
            </div>
        </div>
    </div>
</div>

{# QR Code Display Modal #}
<div class="modal fade" id="qrModal" tabindex="-1" aria-labelledby="qrModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="max-width: 95vw; max-height: 95vh;">
        <div class="modal-content" style="height: 95vh;">
            <div class="modal-header py-2">
                <h5 class="modal-title" id="qrModalLabel">
                    <i class="bi bi-qr-code me-2"></i>Project QR Code
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center p-2 d-flex flex-column justify-content-center" style="flex: 1; overflow: hidden;">
                <div id="qr-code-container" class="d-flex justify-content-center align-items-center" style="flex: 1; min-height: 0;">
                    <img id="qr-code-image" src="" alt="QR Code" style="width: 100%; height: 100%; max-width: 85vw; max-height: 85vh; object-fit: contain;">
                </div>
                <p class="text-muted mb-0 mt-2">
                    <small>UUID: <span id="qr-uuid"></span></small>
                </p>
            </div>
            <div class="modal-footer py-2">
                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}
