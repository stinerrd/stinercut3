<div id="projects_content">
    {% if projects is empty %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>No projects found matching your criteria.
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="table-light">
                    <tr>
                        <th>Client</th>
                        <th>Type</th>
                        <th>Videographer</th>
                        <th>Status</th>
                        <th>Date</th>
                        <th class="text-center">Video</th>
                        <th class="text-center">Photo</th>
                        <th class="text-center">QR</th>
                        <th style="width: 100px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for project in projects %}
                    <tr data-id="{{ project.id }}" data-type="{{ project.type }}" data-client-id="{{ project.clientId }}">
                        <td class="project-client">{{ project.clientName ?? '-' }}</td>
                        <td class="project-type">{{ project.typeLabel }}</td>
                        <td class="project-videographer" data-videographer-id="{{ project.videographerId }}">
                            {{ project.videographerName ?? '-' }}
                        </td>
                        <td class="project-status">
                            {% set statusClass = {
                                'created': 'bg-secondary',
                                'processing': 'bg-primary',
                                'done': 'bg-success',
                                'archived': 'bg-dark'
                            } %}
                            <span class="badge {{ statusClass[project.status] ?? 'bg-secondary' }}">
                                {{ project.status|capitalize }}
                            </span>
                        </td>
                        <td class="project-desired-date">{{ project.desiredDate|date('Y-m-d') }}</td>
                        <td class="text-center project-video">
                            {% set videoClass = {
                                'yes': 'text-success',
                                'no': 'text-danger',
                                'maybe': 'text-warning'
                            } %}
                            {% set videoIcon = {
                                'yes': 'bi-check-circle-fill',
                                'no': 'bi-x-circle-fill',
                                'maybe': 'bi-question-circle-fill'
                            } %}
                            <i class="bi {{ videoIcon[project.video] }} {{ videoClass[project.video] }}" title="Video: {{ project.video }}"></i>
                        </td>
                        <td class="text-center project-photo">
                            {% set photoClass = {
                                'yes': 'text-success',
                                'no': 'text-danger',
                                'maybe': 'text-warning'
                            } %}
                            {% set photoIcon = {
                                'yes': 'bi-check-circle-fill',
                                'no': 'bi-x-circle-fill',
                                'maybe': 'bi-question-circle-fill'
                            } %}
                            <i class="bi {{ photoIcon[project.photo] }} {{ photoClass[project.photo] }}" title="Photo: {{ project.photo }}"></i>
                        </td>
                        <td class="text-center">
                            {% if project.qr %}
                                <button type="button" class="btn btn-sm btn-outline-secondary project-qr-btn"
                                        data-qr="{{ project.qr|base64_encode }}"
                                        data-uuid="{{ project.uuid }}"
                                        title="View QR Code">
                                    <i class="bi bi-qr-code"></i>
                                </button>
                            {% else %}
                                <span class="text-muted small">No QR</span>
                            {% endif %}
                        </td>
                        <td>
                            <button type="button" class="btn btn-sm btn-outline-primary project-edit-btn me-1" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button type="button" class="btn btn-sm btn-danger project-delete-btn" title="Delete">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        {% if pagination is defined and pagination.totalPages > 0 %}
            {% include '_pagination.html.twig' with {
                currentPage: pagination.currentPage,
                totalPages: pagination.totalPages,
                total: pagination.total,
                perPage: pagination.perPage,
                itemsCount: projects|length,
                entityName: 'Projects',
                ariaLabel: 'Project pagination'
            } %}
        {% endif %}
    {% endif %}
</div>
