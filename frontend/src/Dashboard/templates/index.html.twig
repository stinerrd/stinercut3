{% extends 'base.html.twig' %}

{% block title %}Dashboard - Tandem Video Editor{% endblock %}

{% block page_title %}Dashboard{% endblock %}
{% block breadcrumb_active %}Dashboard{% endblock %}

{% block content %}
<div class="row">
    {# Welcome Card #}
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Welcome to Tandem Video Editor</h3>
            </div>
            <div class="card-body">
                <p>Your video editing workspace is ready. Get started by:</p>
                <ul>
                    <li>Creating a new project</li>
                    <li>Uploading video files</li>
                    <li>Browsing connected media devices</li>
                </ul>
            </div>
        </div>
    </div>

    {# Quick Stats Card #}
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Quick Stats</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-6">
                        <div class="info-box bg-info">
                            <span class="info-box-icon"><i class="bi bi-film"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text">Projects</span>
                                <span class="info-box-number">0</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="info-box bg-success">
                            <span class="info-box-icon"><i class="bi bi-check-circle"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text">Completed</span>
                                <span class="info-box-number">0</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Detector Status Card #}
    <div class="col-lg-4">
        <div class="card" id="detector-status-card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="bi bi-usb-drive me-2"></i>Device Detector
                </h3>
                <div class="card-tools">
                    <span id="detector-refresh-indicator" class="badge bg-secondary" style="display: none;">
                        <i class="bi bi-arrow-repeat spin"></i>
                    </span>
                </div>
            </div>
            <div class="card-body">
                {# Daemon Status #}
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Daemon Status</span>
                    <span id="detector-service-status" class="badge bg-secondary">Checking...</span>
                </div>

                {# Listener Toggle #}
                <div class="d-flex justify-content-between align-items-center">
                    <span class="text-muted">Device Listener</span>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox"
                               id="detector-listener-toggle" role="switch" disabled>
                        <label class="form-check-label" for="detector-listener-toggle"
                               id="detector-listener-label">Loading...</label>
                    </div>
                </div>

                {# Error Message Area #}
                <div id="detector-error" class="alert alert-danger mt-3 mb-0" style="display: none;"></div>
            </div>
        </div>
    </div>
</div>

{# Recent Activity #}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Recent Activity</h3>
            </div>
            <div class="card-body">
                <p class="text-muted">No recent activity yet. Start by creating a new project!</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
