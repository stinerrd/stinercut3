{% extends 'base.html.twig' %}

{% block title %}Clients - Tandem Video Editor{% endblock %}

{% block page_title %}Clients{% endblock %}
{% block breadcrumb_active %}Clients{% endblock %}

{% block content %}
<div class="row">
    <div class="col-12">
        {# Collapsible Filter Card #}
        <div class="card card-outline card-secondary mb-3">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="bi bi-funnel me-2"></i>Filters
                </h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-lte-toggle="card-collapse">
                        <i data-lte-icon="expand" class="bi bi-plus-lg"></i>
                        <i data-lte-icon="collapse" class="bi bi-dash-lg"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <form id="client-filter-form">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="filter-name" class="form-label">Name</label>
                                <input type="text" class="form-control" id="filter-name" name="name" placeholder="Search by name...">
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="mb-3">
                                <label for="filter-marketing" class="form-label">Marketing</label>
                                <select class="form-select" id="filter-marketing" name="marketing_flag">
                                    <option value="">All</option>
                                    <option value="1">Yes</option>
                                    <option value="0">No</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-2 offset-md-4">
                            <div class="mb-3">
                                <label class="form-label">&nbsp;</label>
                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-primary flex-fill">
                                        <i class="bi bi-search me-1"></i>Apply
                                    </button>
                                    <button type="button" id="filter-reset-btn" class="btn btn-outline-secondary">
                                        <i class="bi bi-arrow-counterclockwise"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        {# Main Clients Card #}
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="bi bi-people me-2"></i>Clients
                </h3>
                <div class="card-tools">
                    <button type="button" id="client-add-btn" class="btn btn-sm btn-primary">
                        <i class="bi bi-plus-circle me-1"></i>Add Client
                    </button>
                </div>
            </div>
            <div class="card-body">
                {% include '@Client/_table.html.twig' with {
                    clients: clients,
                    pagination: pagination
                } %}
            </div>
        </div>
    </div>
</div>

{# Create/Edit Modal #}
<div class="modal fade" id="clientModal" tabindex="-1" aria-labelledby="clientModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="clientModalLabel">Add Client</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="client-form">
                    <input type="hidden" id="client-id" name="id">
                    <div class="mb-3">
                        <label for="client-name" class="form-label">Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="client-name" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="client-email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="client-email" name="email">
                    </div>
                    <div class="mb-3">
                        <label for="client-phone" class="form-label">Phone</label>
                        <input type="tel" class="form-control" id="client-phone" name="phone">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Marketing</label>
                        <div class="form-check mt-2">
                            <input class="form-check-input" type="checkbox" id="client-marketing" name="marketing_flag">
                            <label class="form-check-label" for="client-marketing">
                                Allow marketing use
                            </label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="client-save-btn">Save</button>
            </div>
        </div>
    </div>
</div>

{# Delete Confirmation Modal #}
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this client?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="delete-confirm-btn">Delete</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}
